<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:argType="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/home_toolbar_id"
            layout="@layout/toolbar_layout" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom_nav"
        android:layout_below="@+id/layout_toolbar"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_for_get_values"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <VideoView
                    android:id="@+id/videoView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" />

                <RelativeLayout
                    android:id="@+id/layoutBlue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#010718"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relParent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:background="@color/black"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/relLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_320sdp"
                    android:layout_marginStart="@dimen/_66sdp"
                    android:layout_marginEnd="@dimen/_66sdp"
                    android:background="@color/black"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/relChild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/rectangles"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true">

                            <VideoView
                                android:id="@+id/mVideoSurfaceViewNone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"

                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relBlurViews"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:id="@+id/ll_top"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_160sdp"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true">

                                <com.sherazkhilji.videffects.view.VideoSurfaceView
                                    android:id="@+id/mVideoSurfaceViewTop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/ll_bottom"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_150sdp"
                                android:layout_alignParentBottom="true">

                                <com.sherazkhilji.videffects.view.VideoSurfaceView
                                    android:id="@+id/mVideoSurfaceViewBottom"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true" />

                            </RelativeLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/ll_full"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_320sdp">

                                <com.sherazkhilji.videffects.view.VideoSurfaceView
                                    android:id="@+id/mVideoSurfaceViewFull"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </RelativeLayout>


                        <FrameLayout
                            android:id="@+id/playPauseLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@id/exo_play"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_play"
                                android:visibility="gone" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@id/exo_pause"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_baseline_pause"
                                android:visibility="gone" />


                        </FrameLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/audioChangeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/cv_audio_removed"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/iv_frame"
                            android:visibility="gone"

                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/iv_audio"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:src="@drawable/ic_speaker_selected" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_toRightOf="@+id/iv_audio"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/audio_removed"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_6ssp" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/cv_distortion"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/cv_audio_removed"
                            android:background="@drawable/iv_frame"
                            android:visibility="gone"

                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_10sdp"

                                >

                                <ImageView
                                    android:id="@+id/iv_distortion"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_disortion" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_toRightOf="@+id/iv_distortion"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/distortion_added"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_6ssp" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayoutLandScape"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_centerInParent="true"
                    android:background="@color/black"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/relChildForLandScape"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/rectanglesLandscape"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <VideoView
                                android:id="@+id/mVideoSurfaceViewNoneLandScape"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true" />

                        </RelativeLayout>

                        <!--                        <androidx.constraintlayout.widget.ConstraintLayout-->
                        <!--                            android:id="@+id/rectanglesLandscape"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:layout_centerInParent="true"-->
                        <!--                            android:layout_centerVertical="true">-->

                        <!--                            <VideoView-->
                        <!--                                android:id="@+id/mVideoSurfaceViewNoneLandScape"-->
                        <!--                                android:layout_width="0dp"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                app:layout_constraintBottom_toBottomOf="parent"-->
                        <!--                                app:layout_constraintEnd_toEndOf="parent"-->
                        <!--                                app:layout_constraintStart_toStartOf="parent"-->
                        <!--                                app:layout_constraintTop_toTopOf="parent" />-->

                        <!--                        </androidx.constraintlayout.widget.ConstraintLayout>-->

                        <RelativeLayout
                            android:id="@+id/layoutBlack"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_315sdp"
                            android:background="@color/black"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/relBlurViewsForLandscape"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/ll_top_ForLandScape"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true">

                                <com.sherazkhilji.videffects.view.VideoSurfaceView
                                    android:id="@+id/mVideoSurfaceViewTopForLandScape"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/ll_bottom_ForLandScape"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_alignParentBottom="true"

                                >

                                <com.sherazkhilji.videffects.view.VideoSurfaceView
                                    android:id="@+id/mVideoSurfaceViewBottomForLandScape"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true"

                                    />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/ll_full_ForLandScape"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true">

                                <com.sherazkhilji.videffects.view.VideoSurfaceView
                                    android:id="@+id/mVideoSurfaceViewFullForLandScape"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <FrameLayout
                            android:id="@+id/playPauseLayoutForLandScape"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true">


                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/videoPlayBtnLandScape"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_play"
                                android:visibility="gone"

                                />


                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/videoPauseBtnLandScape"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_baseline_pause"
                                android:visibility="gone" />


                        </FrameLayout>

                        <RelativeLayout
                            android:id="@+id/audioChangeLayoutForLanScape"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/cv_audio_removed_ForLanScape"
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:background="@drawable/iv_frame"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_10sdp">

                                    <ImageView
                                        android:id="@+id/iv_audio_ForLanScape"
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:src="@drawable/ic_speaker_selected" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_toRightOf="@+id/iv_audio_ForLanScape"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/audio_removed"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_6ssp" />

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/cv_distortion_ForLanScape"
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_toRightOf="@+id/cv_audio_removed_ForLanScape"
                                android:background="@drawable/iv_frame"
                                android:visibility="gone"

                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_10sdp"

                                    >

                                    <ImageView
                                        android:id="@+id/iv_distortion_ForLanScape"
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_disortion" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_toRightOf="@+id/iv_distortion_ForLanScape"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/distortion_added"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_6ssp" />

                                </RelativeLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/seekbarLayoutForLandScape"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/durationForLandScape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginRight="10dp"
                                android:includeFontPadding="false"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/endTimeForLandScape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginRight="10dp"
                                android:includeFontPadding="false"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <SeekBar
                                android:id="@+id/seekbarForLandScape"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="3dp"
                                android:progress="50"
                                android:progressBackgroundTint="@color/white"
                                android:progressTint="#E14D2A"
                                android:splitTrack="false"
                                android:thumb="@drawable/custom_thumb" />


                        </LinearLayout>


                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/seekbarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:includeFontPadding="false"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:includeFontPadding="false"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="3dp"
                        android:progress="50"
                        android:progressBackgroundTint="@color/white"
                        android:progressTint="#E14D2A"
                        android:splitTrack="false"
                        android:thumb="@drawable/custom_thumb" />

                    <SeekBar
                        android:id="@+id/seekbarForTopLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="3dp"
                        android:progress="50"
                        android:progressBackgroundTint="@color/white"
                        android:progressTint="#E14D2A"
                        android:splitTrack="false"
                        android:thumb="@drawable/custom_thumb"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/blur_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/blurLayouts"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relParent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:fontFamily="@font/sf_pro_display_regulor"
                    android:text="@string/_50"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_dot"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/iv_dot1" />

                <SeekBar
                    android:id="@+id/blur_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/iv_dot"
                    android:maxHeight="3dp"
                    android:progress="50"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/white"
                    android:splitTrack="false"
                    android:thumb="@drawable/custom_thumb" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/blurLayouts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_non_blur"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/un_selected_button"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_none_blur"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:src="@drawable/ic_non_blur"

                            />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_none_blur"
                            style="@style/bottomsheet_label_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/sf_pro_display_regulor"
                            android:text="@string/none"
                            android:textColor="@color/grey_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_top_blur"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/un_selected_button"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_top_blur"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:src="@drawable/ic_top_blur" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_top_blur"
                            style="@style/bottomsheet_label_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/sf_pro_display_regulor"
                            android:text="@string/top_blur"
                            android:textColor="@color/grey_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_bottom_blur"
                    android:layout_width="0dp"
