<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:argType="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/home_toolbar_id"
            layout="@layout/toolbar_layout" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom_nav"
        android:layout_below="@+id/layout_toolbar"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_305sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/app_bg_color"
                app:controller_layout_id="@layout/custom_controller"
                app:hide_on_touch="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:show_subtitle_button="true"
                app:show_timeout="5000"
                app:use_controller="true" />

            <RelativeLayout
                android:id="@+id/blur_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/blurLayouts"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:fontFamily="@font/sf_pro_display_regulor"
                    android:text="50%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_dot"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/iv_dot1" />

                <SeekBar
                    android:id="@+id/blur_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/iv_dot"
                    android:maxHeight="3dp"
                    android:progress="50"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/white"
                    android:splitTrack="false"
                    android:thumb="@drawable/custom_thumb" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/blurLayouts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_non_blur"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/un_selected_button"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_none_blur"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:src="@drawable/ic_non_blur"

                            />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_none_blur"
                            style="@style/bottomsheet_label_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/sf_pro_display_regulor"
                            android:text="@string/none"
                            android:textColor="@color/grey_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_top_blur"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/un_selected_button"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_top_blur"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:src="@drawable/ic_top_blur" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_top_blur"
                            style="@style/bottomsheet_label_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/sf_pro_display_regulor"
                            android:text="@string/top_blur"
                            android:textColor="@color/grey_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_bottom_blur"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/un_selected_button"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_bottom_blur"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:src="@drawable/ic_bottom_blur" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_bottom_blur"
                            style="@style/bottomsheet_label_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/sf_pro_display_regulor"
                            android:text="@string/bottom_blur"
                            android:textColor="@color/grey_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_full_blur"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/un_selected_button"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_full_blur"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:src="@drawable/ic_full_blur" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_full_blur"
                            style="@style/bottomsheet_label_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/sf_pro_display_regulor"
                            android:text="@string/full_blur"
                            android:textColor="@color/grey_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAudioChangeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/buttonNoEffect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <include
                    android:id="@+id/buttonLayouts"
                    layout="@layout/layout_buttons" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/buttonNoEffect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/ss_corner_round_white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_noEffect"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_no_effect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv_noEffect"
                        android:fontFamily="@font/sf_pro_display_regulor"
                        android:text="@string/no_effect"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/censor_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_censor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_10sdp"

                    />

                <ImageView
                    android:id="@+id/iv_censor"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_censor_unfilled" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_censer"
                    style="@style/bottomsheet_label_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="@string/censor_it"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/audio_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_audio"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/iv_speaker"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_speaker_unfilled" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_audio"
                    style="@style/bottomsheet_label_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="@string/edit_audio"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>